<div class="container">
<div class="columns">
    <div class="column">
        <h1>Episodio</h1>
        <p></p>

        Serie: <%= @serie %>
        <br> </br>
        Temporada: <%= @temporada %>
        <br> </br>
        Nombre: <%= @nombre_ep %>
        <br> </br>
        Fecha en que estuvo al aire: <%= @info_episodio[0]["air_date"] %>
        <br> </br>
        Código: <%= @info_episodio[0]["episode_id"] %>
        <br> </br>
        <br> </br>
        Personajes:
        <br> </br>
        <% @personajes.each do |personaje| %>
            <%= link_to personaje, personaje_show_path(nombre: personaje) %>
            <br> </br>
        <% end %>
        </div>
    </div>
</div>